{% extends 'security/layout.html.twig' %}

{% set page_heading = 'user_password_reset.heading'|trans %}

{% block content %}
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-4 px-4 shadow sm:rounded-lg sm:px-10">
            <div class="mt-3 mb-4 text-gray-500">
                {{ 'user_password_reset.paragraph.html'|trans|raw }}
                <p class="mt-4 bg-yellow-50 border-l-4 border-yellow-400 p-4 text-sm">{{ 'user_password_reset.request_limit_notice.html'|trans|raw }}</p>
            </div>
            {{ form_start(form, { 'class': 'space-y-6' }) }}
            {{ form_row(form.email) }}
            <div class="pt-5">
                <button type="submit" name="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    {{ 'label.sent_reset'|trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}
