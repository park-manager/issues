{% set page_heading = 'user_password_reset_confirm.heading'|trans %}

{% extends 'security/layout.html.twig' %}

{% block content %}
    <div class="mt-8 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <div class="mb-4 text-gray-500">
            {{ 'user_password_reset_confirm.paragraph.html'|trans|raw }}
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-6'} }) }}
        {{ form_errors(form) }}
        {{ form_row(form.password) }}
        <div class="pt-5">
            <button type="submit" name="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                {{ 'label.change_password'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock content %}
