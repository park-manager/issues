<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ page_heading }} | Park-Manager</title>
    {{ encore_entry_link_tags('app') }}
</head>
<body class="w-full max-w-xl container mx-auto p-8">
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h1 class="text-3xl mb-4">{{ page_heading }}</h1>
    {% if error|default('') is not empty %}
        <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4 p-4 mb-4" role="alert">
            <p class="font-bold">{{ 'Error'|trans({}, 'validators') }}</p>
            <p>{{ error|raw }}</p>
        </div>
    {% endif %}
    {% include '_flashes.html.twig' %}
    {% block content %}{% endblock content %}
</div>
</body>
</html>
