{% extends '@ParkManagerCore/client/security/layout.html.twig' %}

{% set page_heading = 'password_reset.client_heading'|trans %}

{% block content %}
    <div class="mt-3 mb-4">
        {{ 'password_reset.paragraph.html'|trans|raw }}
        <p class="mt-4 p-4 bg-orange-600 rounded-lg text-gray-200">{{ 'password_reset.request_limit_notice.html'|trans|raw }}</p>
    </div>
    {{ form_start(form) }}
        {{ form_row(form.email) }}
        <div>
            <button type="submit" name="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:shadow-outline w-full mb-4">{{ 'password_reset.submit_button'|trans }}</button>
        </div>
    {{ form_end(form) }}
{% endblock content %}
