<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Park-Manager{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-gray-100">

<nav class="flex items-center justify-between flex-wrap bg-gray-600 p-6 shadow-lg">
    <a class="flex items-center flex-shrink-0 text-white mr-6" href="#">
        <span class="font-semibold text-xl tracking-tight">Company name</span>
    </a>

    <div class="w-2/5">
        <input type="text" class="p-2 w-full border border-gray-600 shadow">
    </div>

    <div class="w-auto flex-wrap lg:flex lg:items-center">
        <nav class="text-sm flex-grow">
            {% block topbar %}
            <a href="#responsive-header" class="inline-block ml-4 text-gray-200 hover:text-white">
                Docs
            </a>
            <a href="#responsive-header" class="inline-block ml-4 text-gray-200 hover:text-white">
                Examples
            </a>
            <a href="#responsive-header" class="inline-block ml-4 text-gray-200 hover:text-white">
                Blog
            </a>
            <a href="#WAT" class="inline-block ml-4 text-gray-200 hover:text-white">Sign out</a>
            {% endblock topbar %}
        </nav>
    </div>
</nav>

<main role="main" class="container mx-auto p-4">
    {% if block('breadcrumbs') is defined %}
        <div class="flex flex-no-wrap align-middle mb-4 font-medium tracking-wide text-sm text-indigo-400">
            {{ block('breadcrumbs') }}
        </div>
    {% endif %}

    {% block pre_content %}
    {% endblock %}

    {% block content %}
    {% endblock %}

    {% block post_content %}
    {% endblock %}
</main>

<footer class="bg-gray-800">
    <div class="flex container mx-auto p-4 text-gray-300">
        {% block footer_contents %}
        <span class="font-light tracking-wide text-sm">{{ 'now'|date('Y') }} &copy; Park-Manager</span>
        {% endblock footer_contents %}
    </div>
</footer>

{% block javascripts %}
{% endblock %}
</body>
</html>

