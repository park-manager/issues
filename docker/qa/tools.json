{
    "tools": [
        {
            "name": "composer-normalize",
            "summary": "Provides normalizing for composer.json",
            "website": "https://github.com/ergebnis/composer-normalize",
            "command": {
                "composer-global-install": {
                    "package": "ergebnis/composer-normalize"
                }
            },
            "test": "composer normalize --help",
            "tags": [
                "composer"
            ]
        },
        {
            "name": "phpstan-prophecy",
            "summary": "PHPStan plug-in for prophecy",
            "website": "https://github.com/jangregor/phpstan-prophecy",
            "command": {
                "composer-bin-plugin": {
                    "package": "jangregor/phpstan-prophecy",
                    "namespace": "phpstan"
                }
            },
            "test": "true"
        },
        {
            "name": "twigcs",
            "summary": "The missing checkstyle for twig!",
            "website": "https://github.com/friendsoftwig/twigcs",
            "command": {
                "composer-bin-plugin": {
                    "package": "friendsoftwig/twigcs",
                    "namespace": "twigcs",
                    "links": {"%target-dir%/twigcs": "twigcs"}
                }
            },
            "test": "twigcs --version"
        }
    ]
}
